<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.ldv.linuxhelper.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_navigation_content"
            app:destination="@id/navigation_content" />
        <action
            android:id="@+id/action_navigation_home_to_navigation_text"
            app:destination="@id/navigation_text" />
    </fragment>

    <fragment
        android:id="@+id/navigation_favourites"
        android:name="com.ldv.linuxhelper.ui.favourites.FavouritesFragment"
        android:label="@string/title_favourites"
        tools:layout="@layout/fragment_favourites" />

    <fragment
        android:id="@+id/navigation_tips"
        android:name="com.ldv.linuxhelper.ui.tips.TipsFragment"
        android:label="@string/title_tips"
        tools:layout="@layout/fragment_tips" >
        <action
            android:id="@+id/action_navigation_tips_to_navigation_web_info"
            app:destination="@id/navigation_web_info" />
    </fragment>

    <fragment
        android:id="@+id/navigation_text"
        android:name="com.ldv.linuxhelper.ui.text.TextFragment"
        android:label="@string/title_text"
        tools:layout="@layout/fragment_text" />

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.ldv.linuxhelper.ui.search.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/navigation_content"
        android:name="com.ldv.linuxhelper.ui.content.ContentFragment"
        android:label="Content"
        tools:layout="@layout/fragment_content" >
        <argument
            android:name="number"
            app:argType="long" />
    </fragment>

    <fragment
        android:id="@+id/navigation_web_info"
        android:name="com.ldv.linuxhelper.ui.webinfo.WebInfoFragment"
        android:label="WebInfo"
        tools:layout="@layout/fragment_webinfo" >
        <argument
            android:name="page"
            app:argType="string" />
    </fragment>

</navigation>